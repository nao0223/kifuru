/* テーマの取得 */
	var theme = $('.get-message').text();
	var loveNum = 0;
/* モードクリック時の処理  */
	$('#casual-mode').click(function(){
		var mode = 'casual';
		
		$('.for_debug_mode').text("casual");
		
		if(theme == "love")
		{
			$('.create-message').text("<%= t('createmsg.poem.confess.love.casual.poem1') %>");
			loveNum = 1;
		}
		else if(theme == "date")
		{
			$('.create-message').text("<%= t('createmsg.poem.sorry.tellme.casual.poem1') %>");
		}
		else if(theme == "propose")
		{
			$('.create-message').text("<%= t('createmsg.poem.sorry.drink.casual.poem1') %>");
		} 
		else if(theme == "late")
		{
			$('.create-message').text("<%= t('createmsg.poem.sorry.kind.casual.poem1') %>");
		}
		else if(theme == "forget")
		{
			$('.create-message').text("<%= t('createmsg.poem.sorry.rest.casual.poem1') %>");
		}

     });


/* シリアスモードクリック時の処理  */
	$('#serious-mode').click(function(){

		var mode = 'serious';

		$('.for_debug_mode').text("serious");

		if(theme == "love")
		{
			$('.create-message').text("<%= t('createmsg.poem.confess.love.serious.poem1') %>");
		}
		else if(theme == "date")
