			$('.create-message').text("<%= t('createmsg.poem.sorry.kind.serious.poem1') %>");
		}
		else if(theme == "forget")
		{
			$('.create-message').text("<%= t('createmsg.poem.sorry.rest.serious.poem1') %>");
